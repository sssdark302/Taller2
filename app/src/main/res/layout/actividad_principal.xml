<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <EditText
        android:id="@+id/nombreEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese su nombre" />

    <Button
        android:id="@+id/guardarNombreBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar nombre" />

    <TextView
        android:id="@+id/nombreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/iniciarTareaBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar tarea en segundo plano"
        android:layout_marginTop="20dp" />

    <ProgressBar
        android:id="@+id/progresoBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnIrConfiguracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambiar color de la pantalla"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"></Button>

</LinearLayout>